}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgba(0, 0, 0, .85);
}

.userinfo-desc {
  color: rgba(0, 0, 0, .45);
}

.UCenter-bg {
  /* background-image: url(https://6d69-miniwise-5gb50to15fafbea3-1304457587.tcb.qcloud.la/images/mine.png?sign=2003bf16c22916470d5a166486580ec0&t=1607523413); */
  background-color: #e03997;
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}


.mytop-box{
  display: flex;
  width: 100%;
  height: 60%;
  align-items: center;
  flex-direction:column;
  justify-content: center;
}
.mytop-avatar{
  overflow:hidden;  
  width: 150rpx;
  height: 150rpx; 
  left: 50%;  
  border-radius: 50%;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}
.mytop-username{
  font-size: 28rpx;
  font-family: SourceHanSansCN-Medium;
  color: #ffffff;
  margin-top: 10rpx;
}

.margin-top-sm {
  margin-top: 20rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  text-align: center;
}


.shareButton{
  /* margin: 0rpx; */
  background-color: #00000000; 
  text-align: left;
  border: none; 
  width: 800rpx;
  font-size: 30rpx;
}


.shareButton::after{
  border: none; 
}




.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 0 24rpx;
}

.goods-box {
  width: 339rpx;
  /* height: 472rpx; */
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius: 5px;
  border: 1px solid #D1D1D1;
  padding-bottom: 10rpx;
}

.goods-box .img-box {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}

.goods-box .img-box image {
  width: 339rpx;
  height: 339rpx;
}

.goods-box .goods-title {
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 10rpx 0;
  color: #000;
  margin-left: 24rpx;
}

.goods-box .goods-price-container {
  display: flex;
  align-items: baseline;
}

.goods-box .goods-price {
  overflow: hidden;
  font-size: 34rpx;
  color: #F20C32;
  margin-left: 24rpx;
}

.goods-box .goods-price2 {
  overflow: hidden;
  font-size: 26rpx;
  color: #aaa;
  text-decoration: line-through;
  margin-left: 20rpx;
}